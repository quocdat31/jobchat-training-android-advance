<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/itemContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/itemHeight" >
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/itemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/superman" />
    <ImageView
        android:id="@+id/gradientBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageCoverHeight"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_background" />
    <TextView
        android:padding="@dimen/descriptionTextPadding"
        android:id="@+id/itemDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itemImageView"
        android:layout_alignTop="@id/itemImageView"
        android:layout_alignRight="@id/itemImageView"
        android:layout_alignBottom="@id/itemImageView"
        android:gravity="bottom"
        android:textSize="@dimen/descriptionTextSize"
        android:text="Description"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
